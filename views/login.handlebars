<div class="row container">
    <div class="col-md-6">
        <h3 class="text-center">Log in</h3>

        <form class="form login-form text-right">
            <div class="form-group">
                <label for="email-login" class="col-form-label">email:</label>
                <input class="form-input form-control" type="text" id="email-login" />
            </div>
            <div class="form-group">
                <label for="password-login" class="col-form-label">password:</label>
                <input class="form-input form-control" type="password" id="password-login" />
            </div>
            <div class="form-group text-center">
                <button class="btn btn-primary mt-2" type="submit">Log In</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h3 class="text-center">Sign up</h3>

        <form class="form signup-form">
            <div class="form-group">
                <label for="name-signup" class="col-form-label">name:</label>
                <input class="form-input form-control" type="text" id="name-signup" />
            </div>
            <div class="form-group">
                <label for="email-signup" class="col-form-label">email:</label>
                <input class="form-input form-control" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup" class="col-form-label">password:</label>
                <input class="form-input form-control" type="password" id="password-signup" />
            </div>
            <div class="form-group text-center">
                <button class="btn btn-primary mt-2" type="submit">Sign Up</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/login.js"></script>