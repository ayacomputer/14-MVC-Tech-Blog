<div>
    <div class="text-center blog-container">
        <h2>{{title}}</h2>
        <p>Posted by {{user.name}} on {{format_date date_created}}</p>
        <div class="text-left">{{content}}</div>
    </div>

    <div class="comments">
        {{#if logged_in }}
        <div class="form-group align-items-center">
            <form class="comment-form">

                {{!-- <div class="form row">
                    <div class="form-group col-md-6">
                        <label for="name_comment" class="col-form-label">Name:</label>
                        <input class="form-input" type="text" id="name_comment" />
                    </div>
                </div> --}}

                <div class="form-group">
                    <label for="comment-input" class="col-form-label">Comment:</label>
                    <textarea class="form-control" id="comment-input" rows="5"></textarea>
                </div>
                <div>
                    <button class="btn btn-primary mb-2" type="submit">Comment</button>
                </div>
            </form>
        </div>
        {{/if}}

        <div class="comment-list">
            <hr class="my-4" />
            <p>To comment, please sign in or log in.</p>
            {{#if comments.length}}
            {{#each comments as |comment|}}
            <hr class="my-4" />
            <section class="comment_container">
                <div class="col-md-11">
                    <div class="comment_info">
                        {{user.name}} on {{format_date date_commented}}
                    </div>
                    <div class="comment">
                        {{comment.comment}}
                    </div>
                </div>
                {{#if logged_in}}
                <div class="col-md-2">
                    <button class="btn btn-sm btn-primary" data-id="{{comment.id}}">UPDATE</button>
                    <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
                </div>
                {{/if}}
            </section>
            {{/each}}
            {{else}}
            <div>
                <hr class="my-4" />
                <p>No Comment yet....</p>
            </div>
            {{/if}}
        </div>




    </div>

    <script src="/js/comment.js"></script>