{{#each blogs as |blog|}}
<div class="col-md-12 col-lg-9 col-xl-8">
    <hr class="my-4" />
    <div class="blog-preview">
        <a href="/blog/{{blog.id}}" class="text-decoration-none" />
        <h3 class="title">{{title}}</h3>
        </a>
        <p class="post_meta">
            Posted by {{user.name}} on {{format_date date_created}}
        </p>
        <div>
            {{content}}
        </div>
        <div class="text-right">
            <a href="/blog/{{blog.id}}"><button class="btn btn-outline-dark mt-2">{{blog.comments.length}}
                    comments</button></a></p>
            </a>
        </div>

    </div>

</div>
{{/each}}