<div class="col-md-6">
    <h3>Update Your Post:</h3>

    <form class="form update-blog-form">
        <div class="form-group">
            <label for="title">Title:</label>
            <input class="form-input" type="text" id="title" name="title" value="{{title}}" />
        </div>
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea class="form-input" id="content" name="content" type="text" rows="10"
                value="">{{content}}</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" data-id="{{comment.id}}">Update</button>
        </div>
    </form>
</div>

<script src="/js/update.js"></script>